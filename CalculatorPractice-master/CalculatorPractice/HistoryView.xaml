<Window x:Class="CalculatorPractice.HistoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorPractice"
        mc:Ignorable="d"
        Title="HistoryView" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="HistoryListBox" ItemsSource="{Binding HistoryRecords}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding}" VerticalAlignment="Center" Margin="5"/>
                        
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="삭제"
        Command="{Binding DeleteHistoryView}"
        CommandParameter="{Binding SelectedItem, ElementName=HistoryListBox}"
        HorizontalAlignment="Right" Height="40"
        Margin="5,0,0,0"/>
    </Grid>
</Window>
