<Window x:Class="CalculatorPractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorPractice" 
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400"
        KeyDown="Window_KeyDown"
        >
    
    

    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <!--<RowDefinition Height="50"/>-->
            <RowDefinition Height="50"/>
            <RowDefinition Height="450"/>
        </Grid.RowDefinitions>
        <!--<TextBlock Grid.Row="0" HorizontalAlignment="Right" Text="{Binding CalcExp}" FontSize="15"/>-->
        <TextBlock Grid.Row="0" HorizontalAlignment="Right" Text="{Binding Display}" FontSize="30"/>


        <UniformGrid Grid.Row="1" Columns="4" Rows="5" Margin="0,0,0,140">
            <Button Content="%"
                    Command="{Binding EnterNumberCommand}" CommandParameter="%"  Focusable="False">
            </Button>
            <Button Content="+/-"
               Command="{Binding EnterNumberCommand}" CommandParameter="+/-" Focusable="False"></Button>
            <Button Content="C"
                    Command="{Binding ClearCommand}" CommandParameter="esc" Focusable="False"></Button>
            <Button Content="CE"
        Command="{Binding CEClearCommand}" CommandParameter="C" Focusable="False"></Button>
            <Button Content="⌫"
                    Command="{Binding BackSpaceCommand}" CommandParameter="⌫" Focusable="False"></Button>
            <Button Content="7"
                     Command="{Binding EnterNumberCommand}" CommandParameter="7" Focusable="False"></Button>
            <Button Content="8"
                     Command="{Binding EnterNumberCommand}" CommandParameter="8" Focusable="False"></Button>
            <Button Content="9"
                    Command="{Binding EnterNumberCommand}" CommandParameter="9" Focusable="False"></Button>
            <Button Content="/"
                    Command="{Binding SetOpertaionCommand}" CommandParameter="/" Focusable="False"></Button>
            <Button Content="4"
                    Command="{Binding EnterNumberCommand}" CommandParameter="4" Focusable="False"></Button>
            <Button Content="5"
                    Command="{Binding EnterNumberCommand}" CommandParameter="5" Focusable="False"></Button>
            <Button Content="6"
                    Command="{Binding EnterNumberCommand}" CommandParameter="6" Focusable="False"></Button>
            <Button Content="*"
                    Command="{Binding SetOpertaionCommand}" CommandParameter="*" Focusable="False"></Button>
            <Button Content="1"
                    Command="{Binding EnterNumberCommand}" CommandParameter="1" Focusable="False"></Button>
            <Button Content="2"
                    Command="{Binding EnterNumberCommand}" CommandParameter="2" Focusable="False"></Button>
            <Button Content="3"
                    Command="{Binding EnterNumberCommand}" CommandParameter="3" Focusable="False"></Button>
            <Button Content="+"
                     Command="{Binding SetOpertaionCommand}" CommandParameter="+" Focusable="False"></Button>

            <Button Content="."
                    Command="{Binding NewDot}" CommandParameter="." Focusable="False"></Button>
            <Button Content="0"
                    Command="{Binding EnterNumberCommand}" CommandParameter="0" Focusable="False"></Button>
            <Button Content="="
                    Command="{Binding CalculateCommand}" CommandParameter="=" Focusable="False"></Button>
            <Button Content="-"
                    Command="{Binding SetOpertaionCommand}" CommandParameter="-" Focusable="False"></Button>
            <Button Content="("
        Command="{Binding ParenthesisCommand}" CommandParameter="(" Focusable="False"></Button>
            <Button Content=")" Command="{Binding ParenthesisCommand}" CommandParameter=")" Focusable="False"></Button>
            <Button Content="history" Command="{Binding ShowHistory}" CommandParameter="history" Focusable="False"></Button>

        </UniformGrid>



        

    </Grid>
</Window> 