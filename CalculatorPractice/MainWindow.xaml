<Window x:Class="CalculatorPractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorPractice" 
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400"
        KeyDown="Window_KeyDown">
        
    
                <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" HorizontalAlignment="Right" Text="{Binding CalcExp}" FontSize="15"/>
        <TextBlock Grid.Row="1" HorizontalAlignment="Right" Text="{Binding Display}" FontSize="30"/>
        
        
        

        <UniformGrid Grid.Row="2" Columns="4" Rows="5" Margin="0,0,0,54">
            <Button Content="%"
                    Command="{Binding EnterNumberCommand}" CommandParameter="%" >
            </Button>
            <Button Content="+/-"
               Command="{Binding EnterNumberCommand}" CommandParameter="+/-"></Button>
            <Button Content="C"
                    Command="{Binding ClearCommand}" CommandParameter="C"></Button>
            <Button Content="CE"
        Command="{Binding CEClearCommand}" CommandParameter="C"></Button>
            <Button Content="⌫"
                    Command="{Binding BackSpaceCommand}" CommandParameter="⌫"></Button>
            <Button Content="7"
                     Command="{Binding EnterNumberCommand}" CommandParameter="7"></Button>
            <Button Content="8"
                     Command="{Binding EnterNumberCommand}" CommandParameter="8"></Button>
            <Button Content="9"
                    Command="{Binding EnterNumberCommand}" CommandParameter="9"></Button>
            <Button Content="/"
                    Command="{Binding SetOpertaionCommand}" CommandParameter="/" ></Button>
            <Button Content="4"
                    Command="{Binding EnterNumberCommand}" CommandParameter="4"></Button>
            <Button Content="5"
                    Command="{Binding EnterNumberCommand}" CommandParameter="5" ></Button>
            <Button Content="6"
                    Command="{Binding EnterNumberCommand}" CommandParameter="6" ></Button>
            <Button Content="*"
                    Command="{Binding SetOpertaionCommand}" CommandParameter="*" ></Button>
            <Button Content="1"
                    Command="{Binding EnterNumberCommand}" CommandParameter="1" ></Button>
            <Button Content="2"
                    Command="{Binding EnterNumberCommand}" CommandParameter="2"></Button>
            <Button Content="3"
                    Command="{Binding EnterNumberCommand}" CommandParameter="3" ></Button>
            <Button Content="+"
                     Command="{Binding SetOpertaionCommand}" CommandParameter="+"></Button>
            
            <Button Content="."
                    Command="{Binding NewDot}" CommandParameter="."></Button>
            <Button Content="0"
                    Command="{Binding EnterNumberCommand}" CommandParameter="0"></Button>
            <Button Content="="
                    Command="{Binding SetOpertaionCommand}" CommandParameter="="></Button>
            <Button Content="-"
                    Command="{Binding SetOpertaionCommand}" CommandParameter="-"></Button>
        </UniformGrid>

    </Grid>
</Window>
